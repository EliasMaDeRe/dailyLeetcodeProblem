/*
    Link: https://leetcode.com/problems/length-of-last-word/
*/
class Solution {
public:
    int lengthOfLastWord(string s) {
        
        int f = s.size(),count=0;
        
        for(int i = 0; i < f; ++i){
            
            if(s[i] == ' '){
                
                
                
            }else{
                count=0;
                while(s[i] != ' ' && i < f){
                    count++;
                    ++i;
                }
                
                
            }
            
        }
        
        return count;
        
    }
};
